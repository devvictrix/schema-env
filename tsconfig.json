{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "isolatedModules": true,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*", "tests/index.test.ts"],
  "exclude": ["node_modules", "dist", "**/*.cjs", "**/*.test.ts"]
}
